<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.md.livingwidget.navigation.PHNavigationBar
        android:id="@+id/navBar"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="44dp"/>

    <LinearLayout
        app:layout_constraintTop_toBottomOf="@+id/navBar"
        app:layout_goneMarginTop="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recCategory"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>

        <com.md.livingwidget.flowlabel.PHFlowLabelLayout
            android:id="@+id/flowLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:flowLayoutBackgroundColor="#F4F5F6"
            app:flowLayoutBackgroundColorSelector="#F5F5F5"
            app:flowLayoutRadius="6mm"
            app:flowLayoutTextColor="#8c8c8c"
            app:flowLayoutTextSize="35mm"/>

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>