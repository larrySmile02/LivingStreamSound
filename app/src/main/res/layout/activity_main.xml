<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.md.livingwidget.viewgroup.LivingFrameLayout
        android:id="@+id/rootContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.md.livingwidget.viewpager.LivingViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </com.md.livingwidget.viewgroup.LivingFrameLayout>

    <!--以下底部导航栏-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@color/living_white"
        android:layout_gravity="bottom">
        <LinearLayout
            android:id="@+id/lltMainBtn"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_marginLeft="108dp"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/ivMainpageBtn"
                android:layout_marginTop="6dp"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:scaleType="fitCenter"
                android:background="@drawable/bg_main_btn"/>
            <TextView
                android:id="@+id/tvMainpageTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textSize="10sp"
                android:textColor="@color/living_262626"
                android:text="@string/living_mainpage_title"/>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/lltMineBtn"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="108dp"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/ivMineBtn"
                android:layout_marginTop="6dp"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:scaleType="fitCenter"
                android:background="@drawable/bg_mine_btn"/>
            <TextView
                android:id="@+id/tvMineTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textSize="10sp"
                android:textColor="@color/living_262626"
                android:text="@string/living_mine_title"/>
        </LinearLayout>

    </FrameLayout>

</FrameLayout>